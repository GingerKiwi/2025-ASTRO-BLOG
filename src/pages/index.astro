---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Ginger Kiwi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Alice&family=Work+Sans:wght@400;600&display=swap" rel="stylesheet" />

    <style is:global>
      @import "../styles/css-reset.css";
      @import "../styles/variables.css";
      @import "../styles/styles.css";
    </style>
  </head>

  <body>
    <Header />

    <main id="main">
      <!-- HERO SECTION -->
      <section class="section--hero" id="home">
        <h1>Ginger Kiwi</h1>
        <p class="p--tagline"></p>
        <p class="p-underconstruction">
          June, 2025: This website is being completely redesigned and coded from scratch in Astro.js.
        </p>
        <p class="p-underconstruction">
          Look for the completed design as well as blog articles and 
          <a href="https://www.youtube.com/@GingerKiwiOnWheels" target="_blank" rel="noopener">GingerKiwiOnWheels</a> YouTube highlights in July, 2025.
        </p>
      </section>

      <!-- FEATURED POSTS (optional placeholder for future dynamic content) -->
      <section class="section--posts" id="posts">
        <h2>Featured Articles</h2>
        <div class="container--posts posts--grid">
          <!-- Placeholder post -->
          <div class="card--posts">
            <h3 class="heading--post-name">Article Title</h3>
            <div class="post--content">
              <ul class="list--post">
                <li><span class="posts--list-item">Post preview text here</span></li>
              </ul>
              <p>Sample paragraph for article preview goes here.</p>
            </div>
            <a href="/blog/sample-post" class="a--cta-post">Continue reading</a>
          </div>
        </div>
      </section>

      <!-- ABOUT -->
      <section class="section--about" id="about">
        <h2>About</h2>
        <div class="container--about">
          <div class="card--about">
            <img src="/assets/photo-profile.png" class="photo-about" alt="photo of Liz" />
            <h3>Elizabeth McCready<span class="span--title"> - Title</span></h3>
            <div class="p--about">
              <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit...</p>
              <p>Another paragraph about your background...</p>
            </div>
          </div>
        </div>
      </section>

      <!-- PROJECTS -->
      <section class="section--our-work" id="our-work">
        <h2>Projects</h2>
        <div class="container--our-work organizations--grid">
          <div class="card--organization">
            <h3>Royal Ontario Museum</h3>
            <h4>Hands-on Tours</h4>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit...</p>
          </div>
          <div class="card--organization">
            <h3>Toronto JavaScript</h3>
            <h4>PubScript Socials</h4>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit...</p>
          </div>
          <!-- Add more project cards as needed -->
        </div>
      </section>

      <!-- DESIGN -->
      <section class="section--design-work" id="design-work">
        <h2>Graphic & UX Design</h2>
        <div class="container--posts posts--grid">
          <div class="card--posts">
            <div class="post--content">
              <img src="/assets/design-gk2024-mobile.png" alt="Design project screenshot" />
            </div>
          </div>
          <!-- Add more design images as needed -->
        </div>
      </section>

      <!-- CONTACT -->
      <section class="section--contact" id="contact">
        <img src="/assets/logo-brand.png" class="logo--gk-contact" alt="Ginger Kiwi logo" />
        <h2 class="heading--gk">Elizabeth M<sup>c</sup>Cready</h2>
        <a href="mailto:liz@gingerkiwi.dev" class="a--cta">Contact Me</a>
      </section>
    </main>

    <Footer />
  </body>
</html>
